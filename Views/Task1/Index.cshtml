@model Lab3.Models.Task1ViewModel

@{
    ViewData["Title"] = "Завдання 1";
}
<br/>
<h4>
    Прізвища та назви груп студентів які мають оцінку 4 з <b>@(Model.SubjectString == "Усі предмети" ? "кожного предмету" : $"предмету \"{Model.SubjectString}\"")</b>
</h4>
<br/>
<div style="display: flex">
    <div style="width: 55%; margin-right: 50px">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Прізвище</th>
                <th>Група</th>
                <th>Оцінка</th>
                <th/>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Tuple!)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    @(item.mark?.ToString() ?? "Немає даних")
                </td>
                <td/>
            </tr>
            }
            </tbody>
        </table>
    </div>
    <div style="width: 45%; padding-left: 30px; padding-top: 20px;  padding-right: 100px">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubjectString" class="control-label">Вибрати предмет:&nbsp; </label>
                <select asp-for="SubjectString" asp-items="Model.Subjects"></select>
                <span asp-validation-for="SubjectString" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value=" Оновити " class="btn btn-outline-dark"/>
            </div>
        </form>
    </div>
</div>