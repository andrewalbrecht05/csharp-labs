@model IEnumerable<Lab3.Models.Student>

@{
    ViewBag.Title = "Пацієнти";
    Layout = "_Layout";
}

<h2>Інформація про студентів</h2>
<table class="table table-striped">
    <thead class="bg-success bg-opacity-10">
    <tr>
        <td>Код</td>
        <td>Прізвище</td>
        <td>Група</td>
    </tr>
    </thead>
     <tbody> 
     @{ 
         var rowCounter = 0;
         foreach (var student in Model)
         {
             <tr class="@(rowCounter++ % 2 == 1 ? "bg-warning bg-opacity-10": "")">
                 <td>@student.Id</td>
                 <td>@student.Name</td>
                 <td>@student.Group</td>
             </tr>
         } 
     }
    </tbody>
</table>
